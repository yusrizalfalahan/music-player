#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/electron" ]; then
  exec "$basedir/electron"  "$basedir/../electron-spawn/cli.js" "$@"
else 
  exec electron  "$basedir/../electron-spawn/cli.js" "$@"
fi
